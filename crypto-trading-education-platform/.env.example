# معلومات الخادم
PORT=3001
NODE_ENV=development

# إعدادات قاعدة البيانات
DB_PATH=./backend/database/trading_platform.db

# مفاتيح API خارجية
COINGECKO_API_KEY=your_coingecko_api_key_here
EMAIL_SERVICE_KEY=your_email_service_key_here

# إعدادات الأمان - لا تغيرها أبداً
ENABLE_LIVE_TRADING=false
PAPER_TRADING_ONLY=true
READ_ONLY_API_KEYS=true

# مفاتيح JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# إعدادات Python Engine
PYTHON_ENGINE_URL=http://localhost:5000
BACKTEST_DATA_PATH=./public/data/backtest
CHARTS_OUTPUT_PATH=./public/charts

# إعدادات WebSocket
WS_PORT=8080

# إعدادات التنبيهات
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@trading-platform.com
EMAIL_PASSWORD=your_app_password_here

# Frontend Vite Environment Variables
VITE_API_URL=http://localhost:3001/api
VITE_SENTRY_DSN=
VITE_APP_ENV=development